<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nomRandoLV"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.00"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/descRandoLV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dureeRandoLV"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/diffRandoLV"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/btDelete"
            android:layout_width="26dp"
            android:layout_height="34dp"
            android:background="@drawable/delete"
            android:paddingRight="35dp" />

        <Button
            android:id="@+id/btLoad"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:background="@drawable/charger"
            android:paddingLeft="35dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dateRandoLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/idRandoLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textIsSelectable="true" />

</LinearLayout>